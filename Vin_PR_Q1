#include<stdio.h>
#include<string.h>

void main()
{
     char  A[99];
     int C =0;
     
     printf("\n");
     printf("*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*\n");
     printf("Program to find length of string\n");
     printf("*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*-*\n");
     printf("\n");

    printf("Enter any string :- ");
    scanf("%s",&A);
    
    int *p; 
     

    C = strlen(A);
    p = & C;

     printf("\n\n");
     printf("Length of string is %d",*p);


}
